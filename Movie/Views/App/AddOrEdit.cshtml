@model MovieViewModel
@{
    ViewBag.Title = "Page to edit movie";
}

<style>

    form {
        max-width: 400px;
        margin: 0 auto;
    }

    div {
        margin-bottom: 15px;
    }

    label {
        display: block;
        margin-bottom: 5px;
    }

    input {
        width: 100%;
        padding: 8px;
        box-sizing: border-box;
        margin-bottom: 10px;
    }

    span {
        color: red;
        font-size: 14px;
        display: block;
        margin-top: 5px;
    }
</style>

<div class="container-box">
    <h4>Edit movie</h4>
    <form method="post">
        <div>
            <label asp-for="Name">Name</label>
            <input type="text" asp-for="Name" />
            <span asp-validation-for="Name"></span>
        </div>
        <div>
            <label asp-for="Genre">Genre</label>
            <input type="text" asp-for="Genre" />
            <span asp-validation-for="Genre"></span>
        </div>
        <input type="submit" class="btn btn-outline-dark" />
    </form>
</div>
